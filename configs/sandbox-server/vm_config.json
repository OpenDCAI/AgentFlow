{
  "server": {
    "url": "http://127.0.0.1:18890",
    "port": 18890,
    "session_ttl": 600
  },
  "resources": {
    "vm": {
      "enabled": true,
      "description": "VM backend - desktop automation",
      "backend_class": "sandbox.server.backends.resources.vm.VMBackend",
      "config": {
        "provider": "docker",
        "region": "",
        "os_type": "Ubuntu",
        "screen_size": [1920, 1080],
        "headless": true,
        "connection_type": "local",
        "pool_size": 1,
        "setup": [],
        "pool_reset": true,
        "snapshot_name": "",
        "use_proxy": false,
        "_comment_required": "Provide local resource paths and passwords via environment variables (avoid hardcoding): VM_CLIENT_PASSWORD / VM_IMAGE_PATH / VM_RECORDING_PATH",
        "client_password": "${VM_CLIENT_PASSWORD:-password}",
        "vm_path": "${VM_IMAGE_PATH}",
        "recording": true,
        "recording_path": "${VM_RECORDING_PATH:-sandbox_recordings}"
      }
    }
  },
  "warmup": {
    "enabled": true,
    "resources": ["vm"]
  }
}

